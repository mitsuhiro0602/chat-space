.sidebar
  .side-header
    .side-header__box
      %p.side-header__box__name
        = current_user.name
      %ul.side-header__box__menu
        %li
          = link_to new_group_path , class: "side-header__box__menu__new-group" do
            = icon('fas', 'edit')

        %li
          = link_to edit_user_path(current_user) , class: "side-header__box__menu__cog" do
            =icon('fas', 'cog')
  .groups
    - current_user.groups.each do | group |
      .group
        = link_to group_posts_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_post
