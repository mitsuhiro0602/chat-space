.message{data: {message: {id: post.id}}}
  .message__upper-info
    %p.message__upper-info__user
      = post.user.name
    %p.message__upper-info__date
      = post.created_at.strftime("%Y/%m/%d %H:%M")
  .lower-message
    - if post.text.present?
      %p.message__text
        = post.text
    = image_tag post.image.url, class: 'lower-message__image' if post.image.present?
